<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
        <!-- Assembly / Common -->
        <OutputType>Exe</OutputType>
        <TargetFramework>net5.0</TargetFramework>
        <AssemblyName>KeySwitchManager.CLI</AssemblyName>
        <RootNamespace>KeySwitchManager.CLI</RootNamespace>
        <Company>R-Koubou</Company>
        <Product>KeySwitchManager CLI Application</Product>
        <Version>0.1.1</Version>
        <Description>KeySwitchManager.Apps.CLI app</Description>
        <Nullable>enable</Nullable>
    </PropertyGroup>

    <ItemGroup>
      <ProjectReference Include="..\..\External\Databases\KeySwitches.LiteDB\Databases.KeySwitches.LiteDB.csproj" />
      <ProjectReference Include="..\..\External\Json\KeySwitches\Json.KeySwitches.csproj" />
      <ProjectReference Include="..\..\External\Xlsx\KeySwitches.ClosedXml\Xlsx.KeySwitches.ClosedXml.csproj" />
      <ProjectReference Include="..\..\External\Xlsx\KeySwitches\Xlsx.KeySwitches.csproj" />
      <ProjectReference Include="..\..\External\Xml\StudioOne.KeySwitch\Xml.KeySwitch.StudioOne.csproj" />
      <ProjectReference Include="..\..\External\Xml\VstExpressionMap\Xml.VstExpressionMap.csproj" />
      <ProjectReference Include="..\..\Interactors\KeySwitch\Interactors.KeySwitch.csproj" />
      <ProjectReference Include="..\..\Interactors\StudioOneKeySwitch\Interactors.StudioOneKeySwitch.csproj" />
      <ProjectReference Include="..\..\Interactors\VstExpressionMap\Interactors.VstExpressionMap.csproj" />
      <ProjectReference Include="..\..\Presenters\KeySwitch\Presenters.KeySwitch.csproj" />
      <ProjectReference Include="..\..\Presenters\StudioOneKeySwitch\Presenters.StudioOneKeySwitch.csproj" />
      <ProjectReference Include="..\..\Presenters\VstExpressionMap\Presenters.VstExpressionMap.csproj" />
    </ItemGroup>

    <ItemGroup>
      <PackageReference Include="CommandLineParser" Version="2.8.0" />
    </ItemGroup>

    <ItemGroup>
      <Content Include="..\..\..\..\CHANGELOG.md">
        <Link>CHANGELOG.md</Link>
        <CopyToOutputDirectory>Always</CopyToOutputDirectory>
      </Content>
      <Content Include="..\..\..\..\LICENSE">
        <Link>LICENSE</Link>
        <CopyToOutputDirectory>Always</CopyToOutputDirectory>
      </Content>
      <Content Include="..\..\..\..\NOTICE.md">
        <Link>NOTICE.md</Link>
        <CopyToOutputDirectory>Always</CopyToOutputDirectory>
      </Content>
      <Content Include="..\..\..\..\README.ja.md">
        <Link>README.ja.md</Link>
        <CopyToOutputDirectory>Always</CopyToOutputDirectory>
      </Content>
      <Content Include="..\..\..\..\README.md">
        <Link>README.md</Link>
        <CopyToOutputDirectory>Always</CopyToOutputDirectory>
      </Content>
    </ItemGroup>

    <ItemGroup>
      <None Update="VERSION.md">
        <CopyToOutputDirectory>Always</CopyToOutputDirectory>
      </None>
    </ItemGroup>

    <!-- Output assenbly version to text file for including on deploy by msbuild script. -->
    <Import Project="GenerateVersion.msbuild" />
    <!-- Output shellscript for launch -->
    <Import Project="GenerateLauncher.msbuild" />


</Project>
